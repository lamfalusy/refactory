	<servlet>
		<description>
  	</description>
		<display-name>UpdateTicketServlet</display-name>
		<servlet-name>UpdateTicketServlet</servlet-name>
		<servlet-class>hu.neuron.java.refactory.servlet.ticket.UpdateTicketServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateTicketServlet</servlet-name>
		<url-pattern>/secured/UpdateTicketServlet</url-pattern>
